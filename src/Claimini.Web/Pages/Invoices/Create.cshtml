@page
@model Claimini.Web.Pages.Invoices.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select>
                    @foreach (var customer in @Model.Customers)
                    {
                        <option>@customer.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.CreatedInstant" class="control-label"></label>
                <input asp-for="Invoice.CreatedInstant" class="form-control" />
                <span asp-validation-for="Invoice.CreatedInstant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.PaidInstant" class="control-label"></label>
                <input asp-for="Invoice.PaidInstant" class="form-control" />
                <span asp-validation-for="Invoice.PaidInstant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
