@page
@model Claimini.Web.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].StreetAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].StreetAddressAdditional)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].ZipCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Country)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddressAdditional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
