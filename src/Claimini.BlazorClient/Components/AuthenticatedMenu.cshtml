@inherits Claimini.BlazorClient.Components.BaseComponent

@if (!State.IsAuthenticated)
{
    <MenuItemComponent Href="/users/registration" Label="Register" CssClass="oi-home"/>
        
    <MenuItemComponent Href="/users/login" Label="Login" CssClass="oi-home"/>
}
else
{
    <MenuItemComponent Href="/articles" Label="Articles" CssClass="oi-document">
        <MenuItemComponent Href="/articles/add" Label="Add" CssClass="oi-plus"/>
    </MenuItemComponent>
    
    <MenuItemComponent Href="/customers" Label="Customers" CssClass="oi-people">
        <MenuItemComponent Href="/customers/add" Label="Add" CssClass="oi-plus"/>
    </MenuItemComponent>
    
    <MenuItemComponent Href="/invoices" Label="Invoices" CssClass="oi-list-rich">
        <MenuItemComponent Href="/invoices/add" Label="Add" CssClass="oi-plus"/>
    </MenuItemComponent>
}
