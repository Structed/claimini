@using System
@using System.Threading.Tasks
@using Claimini.Shared
@using Microsoft.AspNetCore.Blazor.Components

<div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" placeholder="Name" id="Name" bind="@customer.Name" />
</div>
<div class="form-group">
    <label for="StreetAddress">Street Address</label>
    <input type="text" class="form-control" placeholder="Test Street 15" id="StreetAddress" bind="@customer.StreetAddress" />
</div>
<div class="form-group">
    <label for="StreetAddressAdditional">Street Address (optional)</label>
    <input type="text" class="form-control" placeholder="Apartment 23" id="StreetAddressAdditional" bind="@customer.StreetAddressAdditional" />
</div>
<div class="form-group">
    <label for="ZipCode">ZIP Code</label>
    <input type="text" class="form-control" placeholder="80636" id="ZipCode" bind="@customer.ZipCode" />
</div>
<div class="form-group">
    <label for="City">City</label>
    <input type="text" class="form-control" placeholder="MÃ¼nchen" id="City" bind="@customer.City" />
</div>
<div class="form-group">
    <label for="State">State</label>
    <input type="text" class="form-control" placeholder="Bavaria" id="State" bind="@customer.State" />
</div>
<div class="form-group">
    <label for="Country">Country</label>
    <input type="text" class="form-control" placeholder="Germany" id="Country" bind="@customer.Country" />
</div>

<button type="submit" class="btn btn-success" onclick="@Submit">Save</button>

@functions
{
    [Parameter]
    private Customer customer { get; set; } = new Customer();

    [Parameter]
    private Func<Customer, Task> OnSubmit { get; set; }


    private void Submit()
    {
        Console.WriteLine(customer.Name + customer.StreetAddress);
        Task result = this.OnSubmit?.Invoke(customer);
    }
}
