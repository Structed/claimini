@using System
@using System.Threading.Tasks
@using Claimini.Shared
@using Microsoft.AspNetCore.Blazor.Components

<div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" placeholder="Name" id="Name" bind="@article.Name" />
</div>
<div class="form-group">
    <label for="Price">Price</label>
    <input type="text" class="form-control" placeholder="Test Street 15" id="Price" bind="@article.Price" />
</div>
<div class="form-group">
    <label for="TaxPercentage">Tax Percentage</label>
    <input type="text" class="form-control" placeholder="80636" id="TaxPercentage" bind="@article.TaxPercentage" />
</div>

<button type="submit" class="btn btn-success" onclick="@Submit">Save</button>

@functions
{
    [Parameter]
    private Article article { get; set; } = new Article();

    [Parameter]
    private Func<Article, Task> OnSubmit { get; set; }


    private void Submit()
    {
        Task result = this.OnSubmit?.Invoke(article);
    }
}
