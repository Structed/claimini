@using System.Threading.Tasks
@using Claimini.BlazorClient.ApplicationState
@using Claimini.Shared
@using Microsoft.AspNetCore.Blazor.Components
@page "/invoices/detail/{invoiceId}"
@inherits Claimini.BlazorClient.Components.BaseComponent
@inject IApiClient apiClient;
@inject Microsoft.AspNetCore.Blazor.Services.IUriHelper UriHelper

<h1>Invoice @InvoiceId</h1>
@if (State.SelectedInvoice == null)
{
    <p><em>Loading Invoice...</em></p>
}
else
{
    <h1>Test</h1>
    
    <table class="table">
        <tr>
            <th>Id</th>
            <td>@State.SelectedInvoice.Id</td>
        </tr>
        <tr>
            <th>Customer Name</th>
            <td>@State.SelectedInvoice.Customer.Name</td>
        </tr>
        <tr>
            <th>Created at</th>
            <td>@State.SelectedInvoice.CreatedTimestamp</td>
        </tr>
        <tr>
            <th>Paid at</th>
            <td>@State.SelectedInvoice.PaidTimestamp</td>
        </tr>
        <tr>
            <th>Price (Total)</th>
            <td>@State.SelectedInvoice.PriceTotal</td>
        </tr>
    </table>
    <button type="button" class="btn-primary btn-lg" onclick="@(() => InvoiceEdit(State.SelectedInvoice.Id))">Edit</button>
}

@functions
{
    [Parameter]
    private string InvoiceId { get; set; }

    protected override async Task OnInitAsync()
    {
        ActionCreators.SelectInvoice(Store.Dispatch, apiClient, InvoiceId);

    }

    protected void InvoiceEdit(string invoiceId)
    {
    }
}
