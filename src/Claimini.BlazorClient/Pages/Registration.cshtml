@page "/registration"
@using Claimini.Shared
@inject Microsoft.AspNetCore.Blazor.Services.IUriHelper UriHelper
@inject IApiClient apiClient;
@inject HttpClient Http

<div class="container">
    <h1>Register for Claimini</h1>
    <form method="post">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" placeholder="Email" class="form-control" bind="@Email"/>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Password" class="form-control" bind="@Password" />
        </div>
    
        <input type="submit" onclick="@SubmitForm" value="Submit" />
    </form>
</div>

@functions
{

    public string Email { get; set; } = "";
    public string Password { get; set; } = "";

    private async Task SubmitForm()
    {
        var viewModel = new TokenViewModel
        {
            Email = Email,
            Password = Password
        };

        await Http.PostJsonAsync("http://localhost:65366/api/token/registration", viewModel);
        UriHelper.NavigateTo("/login");    // Does not work right now
    }

}
