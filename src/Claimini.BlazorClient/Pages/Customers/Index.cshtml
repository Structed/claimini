@using System.Threading.Tasks
@using BlazorRedux
@using Claimini.BlazorClient
@using Claimini.BlazorClient.ApplicationState
@using Claimini.BlazorClient.Dto
@page "/customers"
@inherits Claimini.BlazorClient.Components.BaseComponent
@inject IApiClient apiClient;
@using Claimini.BlazorClient
@using Claimini.BlazorClient.ApplicationState

<h1>Customers</h1>
@if (@State.Customers == null)
{
    <p><em>Loading Customers...</em></p>
}
else
{
    <table class='table'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Street</th>
                <th>Street (additional)</th>
                <th>Zip Code</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in @State.Customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.StreetAddress</td>
                    <td>@customer.StreetAddressAdditional</td>
                    <td>@customer.ZipCode</td>
                    <td>@customer.City</td>
                    <td>@customer.State</td>
                    <td>@customer.Country</td>
                </tr>
            }
        </tbody>
    </table>
}
@functions
{

    protected override async Task OnInitAsync()
    {
        await ActionCreators.LoadCustomers(Store.Dispatch, apiClient);

    }
}
